<% layout('layouts/login-signup')  %>
<div class="card">
    <img src="/img/wa-logo.png" alt="">
    <h3>BIT CHAT</h3>
    <form data-form="register" id="FORM" method="POST" action="/user/signup" enctype="multipart/form-data">
        <input class="input" placeholder="Enter your name" name="fullname" required>
        <input class="input" type="email" placeholder="Enter your email" name="email" required>
        <input class="input" type="text" placeholder="Enter your phone number" name="number" required>
        <input class="input" type="password" placeholder="Enter your password" name="password" required>
        <label for="file-upload" class="input pic-label">
            Upload Profile
        </label>

        <input id="file-upload" type="file" name="profile">
        <button class="btn btn-90" id="register-btn">Register</button>
    </form>
    <p class="new-to-bc">Already have an account? <a href="/user/login">Login</a></p>
</div>